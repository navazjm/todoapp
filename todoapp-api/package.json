{
    "name": "todoapp-api",
    "version": "0.1.0",
    "description": "A basic api for a todo app",
    "main": "src/index.ts",
    "scripts": {
        "start": "ts-node src/index.ts",
        "start:prod": "node dist/index.js",
        "dev": "npx dotenv-cli -e .env.dev nodemon src/index.ts",
        "build": "npx dotenv-cli -e .env.prod tsc",
        "lint": "eslint src",
        "lint:fix": "eslint --fix src",
        "test": "npx dotenv-cli -e .env.prod jest",
        "test:ci": "jest",
        "format": "prettier --write './**/*.{js,jsx,ts,tsx,css,md,json}' --config ./.prettierrc",
        "seed": "npx prisma db seed",
        "seed:prod": "npx dotenv-cli -e .env.prod npx prisma db seed",
        "migrate": "npx prisma db push",
        "migrate:prod": "npx dotenv-cli -e .env.prod npx prisma db push",
        "start:migrate:prod": "npx prisma migrate deploy && npm run start:prod"
    },
    "prisma": {
        "seed": "ts-node prisma/seed.ts"
    },
    "keywords": [],
    "author": "Michael Navarro",
    "repository": {
        "type": "git",
        "url": "https://github.com/navazjm/todoapp/todoapp-api"
    },
    "license": "MIT",
    "dependencies": {
        "@prisma/client": "^4.9.0",
        "@types/cookie-parser": "^1.4.3",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "google-auth-library": "^8.7.0",
        "helmet": "^6.0.1",
        "jsonwebtoken": "^9.0.0",
        "morgan": "^1.10.0",
        "prettier": "^2.8.1"
    },
    "devDependencies": {
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.15",
        "@types/jest": "^29.2.5",
        "@types/jsonwebtoken": "^9.0.1",
        "@types/morgan": "^1.9.4",
        "@types/node": "^18.11.18",
        "@types/supertest": "^2.0.12",
        "@typescript-eslint/eslint-plugin": "^5.48.2",
        "@typescript-eslint/parser": "^5.48.2",
        "eslint": "^8.32.0",
        "eslint-config-prettier": "^8.6.0",
        "eslint-import-resolver-typescript": "^3.5.3",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-prettier": "^4.2.1",
        "jest": "^29.3.1",
        "nodemon": "^2.0.20",
        "prisma": "^4.9.0",
        "supertest": "^6.3.3",
        "ts-jest": "^29.0.5",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.4"
    }
}
